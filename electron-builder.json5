{
  $schema: "https://raw.githubusercontent.com/electron-userland/electron-builder/master/packages/app-builder-lib/scheme.json",
  appId: "com.yourcompany.radiology",
  productName: "Radiology",
  asar: true,

  directories: {
    output: "release",
  },

  files: ["dist", "dist-electron", "!**/.vscode", "!**/*.map"],

  publish: {
    provider: "github",
    owner: "muhamadatif",
    repo: "radiology",
    releaseType: "release",
  },

  win: {
    target: [
      {
        target: "nsis",
        arch: ["x64"],
      },
    ],
    icon: "public/icon.ico",
    artifactName: "${productName}.Setup.${version}.${ext}",
  },

  nsis: {
    oneClick: true, // ðŸ”¥ CHANGED FROM false TO true
    perMachine: false,
    allowToChangeInstallationDirectory: false, // ðŸ”¥ CHANGED FROM true TO false
    deleteAppDataOnUninstall: false,
    artifactName: "${productName}.Setup.${version}.${ext}",
    installerIcon: "public/icon.ico",
    uninstallerIcon: "public/icon.ico",
    license: "license.txt", // Optional: add a license file
    createDesktopShortcut: true,
    createStartMenuShortcut: true,
    shortcutName: "Radiology",
  },

  mac: {
    target: ["dmg"],
    icon: "public/icon.icns",
    category: "public.app-category.medical",
    artifactName: "${productName}-${version}-${arch}.${ext}",
  },

  linux: {
    target: ["AppImage"],
    category: "Medical",
    artifactName: "${productName}-${version}-${arch}.${ext}",
  },
}
